<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alix"
        android:id="@+id/tvOtherUserName"
        android:layout_alignTop="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OMG the craziest thing just happened..."
        android:id="@+id/tvLastMessage"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile"
        android:layout_margin="5dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just now"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:layout_alignBottom="@+id/tvOtherUserName"
        android:layout_toEndOf="@+id/tvOtherUserName"
        android:layout_alignTop="@+id/tvOtherUserName"
        android:layout_marginLeft="20dp" />
</RelativeLayout>